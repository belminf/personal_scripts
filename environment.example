# Backup directory
export BACKUP_DIR=~/backups

# Where to log backup output
export BACKUP_LOG="${BACKUP_DIR}/backups.log"

# Where to get backup exceptions
export BACKUP_EXCEPTIONS="${BACKUP_DIR}/backups.exceptions"

# Github user to backup
export BACKUP_GH_USER=belminf

# Volume group for root LV
export VG=my_arch_vg

# Root LV
export ROOT_LV=root_lv

# How big to make snapshot volume
export SNAPSHOT_GB=5

# Where to save snapshot
export SNAPSHOT_DIR="${BACKUP_DIR}/snapshots"

# Where AUR repos are stored
export AUR_DIR="~/aur"
